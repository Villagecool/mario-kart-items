{
  "format_version": "1.20.30",
  "minecraft:attachable": {
    "description": {
      "identifier": "vc:banana_barrel",
      "item": { "vc:banana_barrel": "query.is_owner_identifier_any('minecraft:player')" },
      "materials": {
        "default": "villager_v2",
        "enchanted": "entity_alphatest_glint"
      },
      "textures": {
        "default": "textures/mk/entity/banana_barrel",
        "enchanted": "textures/misc/enchanted_item_glint"
      },
      "geometry": {
        "default": "geometry.banana_barrel"
      },
      "animations": {
        "hold_first_person": "animation.item.first",
        "hold_third_person": "animation.item.third"
      },
      "scripts": {
        "pre_animation": [
          "variable.off_x = -5;",
          "variable.off_y = -5;",
          "variable.off_z = -3;",
          "variable.off_x3 = -5;",
          "variable.off_y3 = -10;",
          "variable.off_z3 = 0;",
          "variable.scale = 0.5;"
        ],
        "animate": [
          { "hold_first_person": "context.is_first_person" },
          { "hold_third_person": "!context.is_first_person" }
        ]
      },
      "render_controllers": ["controller.render.item_default"]
    }
  }
}
